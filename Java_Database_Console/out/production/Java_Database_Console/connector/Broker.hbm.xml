<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="connector.Broker" table="mkantoormdw">
        <meta attribute="class-description">
            This class contains the houses
        </meta>
        <id name="id" type="int" column="MKMDWID">
            <generator class="native"/>
        </id>
        <property name="office" column="MKID" type="int"/>
        <property name="name" column="Name" type="string"/>
        <property name="user" column="User" type="string"/>
        <property name="pwd" column="Pwd" type="string"/>
    </class>
</hibernate-mapping>